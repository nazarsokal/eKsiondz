<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Maui.GoogleMaps;assembly=Maui.GoogleMaps"
             x:Class="eKsiondz.MainPage">
    <VerticalStackLayout>
        <VerticalStackLayout>
            <Entry x:Name="Entry" Placeholder="Enter person ID"></Entry>
            <Button x:Name="GetRequestButton" Text="Send GET request" Clicked="GetRequestButton_Clicked"/>
        </VerticalStackLayout>

        <!-- Add HeightRequest to ensure the map is visible -->
        <maps:Map x:Name="MyMap" HeightRequest="300" />
    </VerticalStackLayout>
</ContentPage>